!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ShipmentTracker
    = stylesheet_link_tag    'application', media: 'all'
    = csrf_meta_tags
  %body

    .navbar.navbar-default
      .container
        .navbar-header
          %a.navbar-brand{href: '/'}
            Shipment Tracker
        %ul.navbar-nav.nav
          %li
            = link_to 'Prepare review', new_feature_review_path
          %li
            = link_to 'Issues', issue_audits_path
          %li
            = link_to 'Repository locations', repository_locations_path
    .container
      - if flash[:error] # the red one
        .alert.alert-danger= flash[:error]
      - if flash[:warning] # the yellow one
        .alert.alert-warning= flash[:warning]
      - if flash[:success] # the green one
        .alert.alert-success= flash[:success]
      - if flash[:info] # the blue one
        .alert.alert-info= flash[:info]
      = yield
